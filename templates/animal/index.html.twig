{% extends '/admin/index.html.twig' %}

{% block title %}Animal index
{% endblock %}


{% block search %}
	{% include 'animal/_search_form.html.twig' with {form: searchForm} only %}
{% endblock %}

{% block content %}
	<h1>Animal index</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Race</th>
				<th>Habitat</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for animal in animals %}
				<tr>
					<td>{{ animal.id }}</td>
					<td>{{ animal.name }}</td>
					<td>{{ animal.race.name }}</td>
					<td>{{ animal.race.habitat|habitat_pretty }}</td>
					<td>
						<a href="{{ path('app_animal_show', {'id': animal.id}) }}">show</a>
						<a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>
						{{ include('animal/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_animal_new') }}">Create new</a>
</div></div></div>{% endblock %}
