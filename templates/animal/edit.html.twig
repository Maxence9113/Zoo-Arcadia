{% extends '/admin/index.html.twig' %}

{% block title %}Edit Animal{% endblock %}

{% block content %}
    <h1>Edit Animal</h1>

    {{ include('animal/_form.html.twig', {'button_label': 'Update'}) }}

    {% for image in animal.animalPictures %}
        <div>
            <img src="{{ asset('/uploads/animals/' ~ image.name)}}" alt="{{image.descriptionAlt}}" width="150">
            <a href="{{ path('app_animal_delete_picture', {id : image.id}) }}"
            data-delete
            data-token="{{ csrf_token('delete' ~ image.id)}}">Supprimer</a>
        </div>
    {% endfor %}

    <a href="{{ path('app_animal_index') }}">back to list</a>

    {{ include('animal/_delete_form.html.twig') }}
{% endblock %}

{% block javascripts %}

<script src="{{ asset('assets/js/images.js')}}"></script>

{% endblock %}
