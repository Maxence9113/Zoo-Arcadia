{% extends '/admin/index.html.twig' %}

{% block title %}Comment index
{% endblock %}

{% block search %}
	{% include 'comment/_search_form.html.twig' with {form: searchForm} only %}
{% endblock %}

{% block content %}
	<h1>Comment index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Username</th>
				<th>Note</th>
				<th>Comment</th>
				<th>CreatedAt</th>
				<th>IsApprouved</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for comment in comments %}
				<tr>
					<td>{{ comment.id }}</td>
					<td>{{ comment.username }}</td>
					<td>{{ comment.note }}</td>
					<td>{{ comment.comment }}</td>
					<td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ comment.isApprouved ? 'Yes' : 'No' }}</td>
					<td>
						<a href="{{ path('app_comment_show', {'id': comment.id}) }}">show</a>
						<a href="{{ path('app_comment_edit', {'id': comment.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_comment_new') }}">Create new</a>
{% endblock %}
