{% extends '/admin/index.html.twig' %}

{% block title %}Race{% endblock %}

{% block content %}
    <h1>Race</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ race.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ race.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ race.description }}</td>
            </tr>
            <tr>
                <th>Habitat</th>
                <td>{{ race.habitat }}</td>
            </tr>
            <tr>
                <th>Illustration</th>
                <td>{{ race.illustration }}</td>
            </tr>
            <tr>
                <th>IllustrationAlt</th>
                <td>{{ race.illustrationAlt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_race_index') }}">back to list</a>

