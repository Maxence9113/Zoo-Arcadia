{% extends '/admin/index.html.twig' %}

{% block title %}VeterinaryReport index{% endblock %}

{% block content %}
    <h1>VeterinaryReport index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Comment</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for veterinary_report in veterinary_reports %}
            <tr>
                <td>{{ veterinary_report.employee.username }}</td>
                <td>{{ veterinary_report.comment }}</td>
                <td>{{ veterinary_report.createdAt ? veterinary_report.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_veterinary_report_show', {'id': veterinary_report.id}) }}">show</a>
                    <a href="{{ path('app_veterinary_report_edit', {'id': veterinary_report.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_veterinary_report_new') }}">Create new</a>
{% endblock %}
