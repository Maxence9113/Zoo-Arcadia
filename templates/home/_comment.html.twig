<div class="container mt-5">
	<div class="row  d-flex justify-content-center">
		<div class="col-md-8">

			<div class="headings d-flex justify-content-between align-items-center mb-3">
				<h4>Commentaires</h4>
			</div>

			{{ form_start(comment_form) }}
			{{ form_widget(comment_form) }}
			<button type="submit">Envoyer</button>
			{{ form_end(comment_form) }}

			{% for comment in comments %}
				{% if comment.isApprouved %}
					<div class="card p-3">
						<div class="d-flex justify-content-between align-items-center">
							<div class="user d-flex flex-row align-items-center">
								<span>
									<small class="font-weight-bold text-primary">{{comment.username}}</small>
									<small class="font-weight-bold">{{comment.comment}}</small>
									<small class="font-weight-bold">{{comment.note}}</small>
								</span>
							</div>
							<small>{{comment.createdAt|date('d/m/Y')}}</small>
						</div>
						<div class="action d-flex justify-content-between mt-2 align-items-center">
							<div class="reply px-4">
								<small>Remove</small>
								<span class="dots"></span>
								<small>Reply</small>
								<span class="dots"></span>
								<small>Translate</small>
							</div>
							<div class="icons align-items-center">
								<i class="fa fa-star text-warning"></i>
								<i class="fa fa-check-circle-o check-icon"></i>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}

		</div>
	</div>
</div>
